@model ListTodoViewModel

<div class="row">
    <div class="col text-center">
        <h1>@ViewData["Title"]</h1>
    </div>
</div>

<div class="row">
    <div class="col">

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Título</th>
                    <th scope="col">Data</th>
                    <th scope="col">Completo?</th>
                    <th scope="col">Ações</th>
                </tr>
            </thead>
            <tbody>
                @* <tr>
                    <th scope="row">1</th>
                    <td>Mark</td>
                    <td>Otto</td>
                    <td>Otto</td>
                    <td>
                        <a href="" class="btn btn-sm btn-success">Completar</a>
                        <a href="" class="btn btn-sm btn-warning">Editar</a>
                        <a href="" class="btn btn-sm btn-danger">Excluir</a>
                    </td>
                </tr> *@

                @foreach (var todo in Model.Todos)
                {
                    <tr>
                        <th scope="row">@todo.Id</th>
                        <td>@todo.Title</td>
                        <td>@todo.Date.ToString("dd/MM/yyyy")</td>
                        <td>
                            @if (todo.IsCompleted){
                                <i class="bi bi-check2-square text-success"></i>
                            }else{
                                <i class="bi bi-x-square text-danger"></i>
                            }
                        </td>
                        <td>
                            <a class="btn btn-sm btn-success @(todo.IsCompleted ? "disabled" : "")" asp-controller="Todo" asp-action="ToComplete" asp-route-id="@todo.Id" onclick="return confirm('Tem certeza que deseja concluir essa tarefa?')">Concluir</a>
                            <a class="btn btn-sm btn-warning @(todo.IsCompleted ? "disabled" : "")" asp-controller="Todo" asp-action="Edit" asp-route-id="@todo.Id">Editar</a>
                            <a class="btn btn-sm btn-danger" asp-controller="Todo" asp-action="Delete" asp-route-id="@todo.Id" onclick="return confirm('Tem certeza que deseja excluir essa tarefa?')">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

<div class="row">
    <div class="col">
        <a asp-controller="Todo" asp-action="Create" class="btn btn-primary">Nova Tarefa</a>
    </div>
</div>